# Configuration file for EditorConfig (https://editorconfig.org)

root=true

[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
max_line_length=80
trim_trailing_whitespace=true

[*.css]
indent_size=2
indent_style=tab

[*.js]
indent_size=2
indent_style=tab

[*.json]
indent_size=2
indent_style=space

[*.pug]
indent_size=2
indent_style=tab

[*.sh]
indent_size=2
indent_style=tab

[*.yaml]
indent_size=2
indent_style=space

[Makefile]
indent_style=tab

[LICENSE]
indent_size=unset
indent_style=space
